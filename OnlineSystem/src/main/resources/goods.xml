<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE configuration PUBLIC "-//ibatis.apache.org//DTD Config 3.0//EN" 
	"http://ibatis.apache.org/dtd/ibatis-3-config.dtd">
<configuration>
	<environments default="environment">
		<environment id="environment">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url"
					value="jdbc:mysql:///online_system?useUnicode=true&amp;characterEncoding=UTF-8&amp;allowMultiQueries=true&amp;useSSL=true" />
				<property name="username" value="userSean" />
				<property name="password" value="Abcd123$" />
			</dataSource>
		</environment>
	</environments>

	<mappers><!-- 配置文件连接 映射器文件 -->

		<mapper resource="mapping/RecordMapper.xml" />

	</mappers>

</configuration> 
